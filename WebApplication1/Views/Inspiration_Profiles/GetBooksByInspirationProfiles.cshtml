@model WebApplication1.Models.Inspiration_Profiles

@{
    ViewBag.Title = "GetBooksByInspirationProfiles";
}

<h2>GetBooksByInspirationProfiles</h2>
<h2>Los libros que han inspiraron a @Model.Nombre</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Books.FirstOrDefault().Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Books.FirstOrDefault().Author.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Books) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author.Nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
